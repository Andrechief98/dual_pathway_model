<?xml version="1.0" ?>
<sdf version="1.5">
  <world name="default">
    <!-- A global light source -->
    <include>
      <uri>model://sun</uri>
    </include>
    <!-- A ground plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>
    
    <!-- Pedestrian 1 -->
    <actor name="actor1">
          <pose>5 0 0.5 0 0 -1.57</pose>
          <skin>
              <filename>walk.dae</filename>
              <scale>1.0</scale>
          </skin>
          <animation name="walking">
              <filename>walk.dae</filename>
              <scale>1.000000</scale>
              <interpolate_x>true</interpolate_x>
          </animation>
        <!-- plugin definition -->
        <plugin name="actor1_plugin" filename="libPedestrianSFMPlugin.so">
            <velocity>0.5</velocity>
            <radius>1</radius>
            <animation_factor>5.1</animation_factor>
            <people_distance>6.0</people_distance>
            <!-- weights -->
            <goal_weight>2.0</goal_weight>
            <obstacle_weight>00.0</obstacle_weight>
            <social_weight>0</social_weight>
            <group_gaze_weight>0.0</group_gaze_weight>
            <group_coh_weight>0.0</group_coh_weight>
            <group_rep_weight>0.0</group_rep_weight>
            <ignore_obstacles>
              <model>ground_plane</model>
            </ignore_obstacles>
            <trajectory>
              <cyclic>true</cyclic>
              <waypoint>5 0 0.5</waypoint>
              <waypoint>0 -6  0.5</waypoint>
            </trajectory>
        </plugin>
    </actor>
  </world>
</sdf>
